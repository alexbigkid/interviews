# load the pass store aliases
source $HOME/.envrc_common

# iOS App Store Configuration
export APPLE_ID=$(passgl gl/app/ios/apple_id)
export APPLE_TEAM_ID=$(passgl gl/app/ios/apple_team_id)
export IOS_BUNDLE_IDENTIFIER=$(passgl gl/app/ios/ios_bundle_identifier)
export FASTLANE_USER=$(passgl gl/app/ios/fastlane_user)
export FASTLANE_PASSWORD=$(passgl gl/app/ios/fastlane_password)
export FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD=$(passgl gl/app/ios/fastlane_apple_application_specific_password)
export MATCH_PASSWORD=$(passgl gl/app/ios/match_password)

# Android Play Store Configuration
export ANDROID_PACKAGE_NAME=$(passgl gl/app/android/android_package_name)
export GOOGLE_PLAY_JSON_KEY_PATH=$(passgl gl/app/android/google_play_json_key_path)
export ANDROID_KEYSTORE_PATH=$(passgl gl/app/android/android_keystore_path)
export ANDROID_KEYSTORE_PASSWORD=$(passgl gl/app/android/android_keystore_password)
export ANDROID_KEY_ALIAS=$(passgl gl/app/android/android_key_alias)
export ANDROID_KEY_PASSWORD=$(passgl gl/app/android/android_key_password)

# Optional: CI/CD specific environment variables
export FASTLANE_SKIP_UPDATE_CHECK="1"
export FASTLANE_HIDE_GITHUB_ISSUES="1"

